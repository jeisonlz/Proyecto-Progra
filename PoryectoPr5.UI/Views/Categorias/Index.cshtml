@model IEnumerable<ProyectoPr5.DAL.Categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminLTE.cshtml";
}

<h2>Modificar Categoria</h2>
<span>---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</span>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombreCategoria)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreCategoria)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.idCategoria }) 

            </td>
        </tr>
    }

</table>
<div class="text-left">

    @Html.ActionLink("Volver", "IndexUpdateCategoria", "Home", new { @class = "elements d-block small mt-3" }, null)

</div>