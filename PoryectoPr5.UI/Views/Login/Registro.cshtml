@model PoryectoPr5.UI.Models.UsuarioModel
@{
    Layout = null;
}

@Html.Raw(TempData["msg"])
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Login</title>
    <link rel="stylesheet" href="../../vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../vendor/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="../../css/sb-admin.css">


    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="css/sb-admin.css" rel="stylesheet">
</head>

<body class="bg-dark">
    @using (Html.BeginForm("registrarUsuario", "Login", FormMethod.Post))
    {
        <div class="container">
            <div class="card card-register mx-auto mt-5">
                <div class="card-header">Register an Account</div>
                <div class="card-body">

                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">

                            </div>
                        </div>
                    </div>

                    <br />
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    @Html.TextBoxFor(s => s.Cedula, new { @class = "form-control", required = "required" })

                                    <label for="inputPassword">Cedula</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    @Html.TextBoxFor(s => s.nombre, new { @class = "form-control", required = "required" })

                                    <label for="inputPassword">Nombre + Apellido</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    @Html.TextBoxFor(s => s.telefono, new { @class = "form-control", required = "required" })

                                    <label for="inputPassword">Telefono</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    @Html.TextBoxFor(s => s.correo, new { @class = "form-control", required = "required" })

                                    <label for="inputPassword">Mail</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    @Html.PasswordFor(s => s.pass, new { @class = "form-control", required = "required" })

                                    <label for="inputPassword">Password</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <br />
                    <div class="form-group">
                        <br />

                        <input type="submit" value="Realizar Registro " class="btn btn btn-primary col-lg-12" />
                    </div>

                    <div class="text-center">

                        @Html.ActionLink("Volver al login", "Index", "Login", new { @class = "elements d-block small mt-3" }, null)

                    </div>
                </div>
            </div>
        </div>


    }
</body>

</html>
